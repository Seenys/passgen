// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PasswordConfig {
  id Int @id @default(1)
  length Int @default(4)
  useUppercase Boolean @default(false)
  useLowercase Boolean @default(false)
  useNumbers Boolean @default(false)
  useSymbols Boolean @default(false)

  // Relaci√≥n con Password
  passwords Password[]
}

model Password {
  id        String      @id @default(uuid())

  title     String
  encryptedPassword  String


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  config PasswordConfig @relation(fields: [configId], references: [id])
  configId Int @default(1)
}